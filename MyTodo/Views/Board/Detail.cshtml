<div class="container">
	<div class="board-detail">
		<div class="col">
			<div class="card">
				<div class="card-header">
					@Model.BoardTitle <br/>
					@Model.BoardDate.ToString("yyyy-MM-dd")
				</div>
				<div class="card-body" style="min-height:700px;">
					@Html.Raw(Model.BoardContent)
				</div>
			</div>
			<div class="card-footer">
				<div id="reply">
					<p>test</p>
					<button type="button" class="btn btn-danger btn-sm delete-comment" data-comment-id="1">삭제</button>
				</div>
			</div>
		</div>
	</div>

	<hr class="my-4">

</div>

<div class="container">
	<div class="reply-detail">
		<div class="col">
			<div class="card "> 
				<div class="card-header">
					<div class="d-flex flex-row align-items-center">
						<input type="text" class="form-control form-control-lg me-3" id="reply-input">
						<div class="reply-button" style="width:120px;">
							<button type="button" class="btn btn-primary" onclick="saveReply()">댓글 등록</button>
						</div>
					</div>
				</div>
				<div class="card-body">
					<a class="btn btn-primary" asp-controller="Board" asp-action="Index">목록</a>
					@if (Model.UserId == Model.Id)
					{
						<a class="btn btn-primary" asp-controller="Board" asp-action="Update" asp-route-boardNo="@Model.BoardNo">수정</a>
						<button type="button" class="btn btn-danger" onclick="Delete('@Model.BoardNo')">삭제</button>
					}
				</div>
			</div>
		</div>
	</div>
</div>

@section Scripts {
	@{
		await Html.RenderPartialAsync("_ValidationScriptsPartial");
	}
	<script>
		function Delete(boardNo) {
			$.ajax({
				url: "/board/delete/" + boardNo,
				type: "Delete",
				success: function (result) {
					alert("삭제 되었습니다.");
					location.href = "/board/Index"
				},
				error: function (xhr, status) {
					if (xhr.status === 401) {
						location.href = "/User/login"
					}
					else 
					{
						location.href = "/Error/Error500"
					}
				}
			});
		}
	</script>
}
